{
	"build": {
		"beforeDevCommand": "pnpm dev",
		"beforeBuildCommand": "pnpm build",
		"devPath": "http://localhost:1420",
		"distDir": "./dist",
		"withGlobalTauri": false
	},
	"package": {
		"productName": "speak-streaming-app",
		"version": "1.0.0"
	},
	"tauri": {
		"allowlist": {
			"dialog": {
				"all": true,
				"open": true,
				"save": true
			},
			"all": false,
			"shell": {
				"all": false,
				"open": true
			}
		},
		"macOSPrivateApi": true,
		"bundle": {
			"active": true,
			"icon": ["./icons/speak-icon.icns"],
			"identifier": "com.mumble.dev",
			"targets": "all"
		},
		"security": {
			"csp": null
		},
		"updater": {
			"active": false
		},
		"windows": [
			{
				"fullscreen": false,
				"resizable": true,
				"alwaysOnTop": false,
				"center": false,
				"focus": false,
				"transparent": true,
				"decorations": true,
				"title": "Speak",
				"minHeight": 600,
				"height": 800,
				"minWidth": 800,
				"width": 1000
			}
		]
	}
}
