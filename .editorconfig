# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = tab
indent_size = 2
charset = utf-8

[*.md]
trim_trailing_whitespace = false

[.yml, .yaml]
indent_style = 2

[.js, .ts]
single_quote = true

[.py]
indent_style = space
indent_size = 4
max_line_length = 80

[.rs]
indent_style = tab
indent_size = 2

[.json]
indent_style = space
indent_size = 2

[.toml]
indent_style = space
indent_size = 2
